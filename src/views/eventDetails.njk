{% extends "_layout.njk" %}

{% block header %}
<h1 id=title>{{ eventTitle }}</h1>
{% endblock %}

{% block dataLayer %}
<script>
  dataLayer = [{
    'supportdisplay': '{{ donateText }}'
  }];
</script>
{% endblock %}

{% block content %}

<ul class="form-errors">

{% for eventsError in eventsErrors %}
            <li>{{eventsError}}</li>
        {% endfor %}

</ul>

<h1 id=title> {{ eventTitle }} 
<div>
<span id ="location">  {{ eventLocation }}</span> 
</div>
<div>
<span id ="date"> {{eventDate}} </span> 
</div>
<div>

 <img src={{ eventImage }} alt="event image" id="image" />
</div>
</h1>
<div>

{% block contributions %}
  Want to contribute? <a href="/donate" id="donate">  {{ donateText }} </a>  Now!
{% endblock %}

</div>


{% if (email!=null) and (confCode!=null) %}
  <div>
    REGISTERED {{ email }}! Your confirmation code is <b>{{ confCode }}</b>
  </div>
{% endif %}




<div>
  Attendees:


<ul class="list-group" id="attendees">
{% for email in eventAttendees %}
 <li class="list-group-item">{{email}}</li>
 {% endfor %}
</ul>

</div>


<form action="/events/{{ eventId }}" method="post">
    <input type="email" id="email" name="email" />
    <button type="submit" class="btn" name="submit">Submit</button>

{% endblock %}
